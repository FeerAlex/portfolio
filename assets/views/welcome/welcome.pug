doctype html
html
    head
        meta(charset = 'utf-8')
        meta(name = 'viewport', content = 'initial-scale=1.0,width=device-width')
        title Добро пожаловать
    body
        .intro
            .intro__card#intro_card
                .card.card--front
                    .card__body
                        .card__photo
                            .card__image
                        h2.card__user-name Феер Александр
                        p.card__desc Личный сайт веб разработчика
                        .card__socials.socials
                            ul.socials__list
                                li.socials__item
                                    a(href="#").socials__link
                                        svg.icon.icon-soc.icon-vk
                                            use(xlink:href="#vk")
                                li.socials__item
                                    a(href="#").socials__link
                                        svg.icon.icon-soc.icon-gh
                                            use(xlink:href="#github")
                                li.socials__item
                                    a(href="#").socials__link
                                        svg.icon.icon-soc.icon-in
                                            use(xlink:href="#in")
                    .card__footer
                        .card__btns
                            button.btn.btn--card.btn--green Мои работы
                            button.btn.btn--card.btn--green Обо мне
                            button.btn.btn--card.btn--green Блог
                .card.card--back
                    form.card__form.form
                        .card__body
                            h4.form__title.title.title--middle.title--white Авторизуйтесь
                            .form__row
                                label.form__label
                                    .form__label-icon
                                        span.icon.icon-login
                                    input(name='login' type='text' placeholder='Логин' id="login").form__label-input
                            .form__row
                                label.form__label
                                    .form__label-icon
                                        span.icon.icon-password
                                    input(name='password' type='password' placeholder='Пароль' id="password").form__label-input
                            .form__controls.controls
                                label.controls-label
                                    input(type="checkbox" name="human" hidden).controls-input
                                    span.controls-fake.controls-fake--checkbox
                                    span.controls-text Я человек
                            .form__controls.controls
                                span.controls-title Вы точно не робот?
                                label.controls-label.controls-label--radio
                                    input(type="radio" name="sure" hidden).controls-input
                                    span.controls-fake
                                    span.controls-text Да
                                label.controls-label.controls-label--radio
                                    input(type="radio" name="sure" checked hidden).controls-input
                                    span.controls-fake
                                    span.controls-text Не уверен
                        .card__footer
                            .card__btns
                                button.btn.btn--card.btn--green#front На главную
                                button.btn.btn--card.btn--green Войти

            a.intro__btn.btn.btn--transparent#front_btn Авторизоваться
